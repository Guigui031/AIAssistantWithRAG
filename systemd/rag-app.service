[Unit]
Description=Celebrity Cruises RAG Streamlit App
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/rag.guillaume.genois.ca
Environment="PATH=/var/www/rag.guillaume.genois.ca/venv/bin"
ExecStart=/var/www/rag.guillaume.genois.ca/venv/bin/streamlit run app.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target